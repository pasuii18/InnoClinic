@model Domain.Models.RegisterViewModel
<form asp-controller="Auth" asp-action="Register" method="post">
    <input type="hidden" asp-for="ReturnUrl"/>
    <div>Register</div>
    <div>
        <label>Username</label>
        <input asp-for="Username" name="Username"/>
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div>
        <label>Password</label>
        <input asp-for="Password" name="Password"/>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div>
        <label>Confirm Password</label>
        <input asp-for="ConfirmPassword" name="ConfirmPassword"/>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div>
        <button type="submit">Sign up</button>
    </div>
</form>
<div>
    <a href="@Url.Action("Login", "Auth", new { returnUrl = Model.ReturnUrl })">Login</a>
</div>

